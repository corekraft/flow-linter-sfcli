{
  "name": "@corekraft/flow-linter",
  "version": "1.3.0",
  "dependencies": {
    "@oclif/core": "^4.5.2",
    "@salesforce/core": "^8.23.0",
    "@salesforce/sf-plugins-core": "^12.2.4",
    "chalk": "5.6.2",
    "cosmiconfig": "^9.0.0",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "@corekraft/flow-linter-core": "1.1.0"
  },
  "devDependencies": {
    "@oclif/plugin-help": "6.2.32",
    "@oclif/test": "4.1.13",
    "@salesforce/dev-config": "4.3.2",
    "@salesforce/ts-sinon": "1.4.31",
    "@sinonjs/fake-timers": "14.0.0",
    "@types/chai": "5.2.2",
    "@types/jsforce": "1.11.5",
    "@types/mocha": "10.0.10",
    "@types/node": "24.3.1",
    "@types/sinon": "17.0.4",
    "@types/sinonjs__fake-timers": "8.1.5",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "chai": "6.0.1",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "globby": "14.1.0",
    "mocha": "11.7.2",
    "nyc": "17.1.0",
    "oclif": "4.22.16",
    "prettier": "3.6.2",
    "sinon": "21.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/corekraft/flow-linter",
  "keywords": [
    "sfdx-plugin",
    "sfcli-plugin",
    "sf-plugin",
    "sf plugin",
    "sf cli plugin"
  ],
  "license": "AGPL-3.0",
  "oclif": {
    "commands": "./lib/src/commands",
    "bin": "sf",
    "topics": {
      "flow": {
        "description": "Commands to find and fix potential bugs in Salesforce Flows."
      }
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/corekraft/flow-linter-sfcli.git"
  },
  "scripts": {
    "prestart": "npm run prepack",
    "start": "ts-node bin/run",
    "lint": "eslint",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc -b && oclif manifest && oclif readme",
    "prettier": "prettier --write '**/*.{js,json,md,ts,yaml,yml}'",
    "test": "nyc --include src npm run test:unit",
    "pretest": "npm run prepack",
    "test:unit": "mocha -r ts-node/register test/**/*.test.ts",
    "version": "oclif readme && git add README.md",
    "lfs:link": "npm link flow-linter-core && npm pack && sf plugins link"
  },
  "type": "module",
  "description": "`flow-linter` brings the same rigor of linting and static code analysis—familiar to developers working with JavaScript or Apex—to Salesforce Flows.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/corekraft/flow-linter-sfcli/issues"
  }
}
